<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxHeight="100dp"
            android:id="@+id/scroll"
            android:padding="20dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="18">


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:inputType="textVisiblePassword"
                    android:hint="ID"
                    android:textColorHint="#888888"
                    android:ems="10"
                    android:id="@+id/id"
                    android:layout_weight="2"
                    android:layout_marginBottom="5dp"/>




                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/connect_check"
                    android:layout_weight="1"
                    android:visibility="gone"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:hint="PW (more than '4')"
                    android:textColorHint="#888888"
                    android:id="@+id/password1"
                    android:layout_weight="2"
                    android:layout_marginBottom="5dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:hint="PW"
                    android:textColorHint="#888888"
                    android:id="@+id/password2"
                    android:layout_weight="2"
                    android:layout_marginBottom="5dp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="2"
                    android:weightSum="8">

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:inputType="textPersonName"
                        android:hint="이름"
                        android:textColorHint="#888888"
                        android:ems="10"
                        android:id="@+id/name"
                        android:layout_weight="6"
                        android:layout_marginRight="5dp"/>


                    <Spinner
                        android:id="@+id/choice_sex"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:entries="@array/sex"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp"
                    android:weightSum="8"
                    android:layout_weight="2">


                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:inputType="textVisiblePassword"
                        android:hint="phone"
                        android:ems="10"
                        android:layout_weight="6"
                        android:id="@+id/phone"
                        android:layout_marginRight="5dp"/>


                    <Button
                        android:text="전송"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/send_certification"
                        android:layout_weight="2"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="2"
                    android:weightSum="9">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:orientation="horizontal"
                        android:layout_marginRight="5dp">

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:inputType="phone"
                            android:hint="인증번호"
                            android:ems="10"
                            android:padding="0dp"
                            android:id="@+id/write_certification"
                            android:layout_weight="3"
                            android:background="@null"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textSize="15dp"
                            android:textColor="#e92020"
                            android:gravity="center"
                            android:text=""
                            android:id="@+id/sec"
                            android:layout_weight="1" />

                    </LinearLayout>


                    <Button
                        android:text="인증"
                        android:textColor="#ffffff"
                        android:layout_width="5dp"
                        android:layout_height="match_parent"
                        android:id="@+id/check_certification"
                        android:layout_weight="2"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textSize="30dp"
                        android:visibility="gone"
                        android:id="@+id/condition"
                        android:layout_weight="0"
                        />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:layout_weight="3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <CheckBox
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/checkBox2"
                            android:layout_weight="1"/>

                        <TextView
                            android:layout_width="0dp"
                            android:text="모데이 이용약관에 동의합니다"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:id="@+id/agree1"
                            android:layout_weight="9"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:layout_weight="2">

                        <CheckBox
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/checkBox3"
                            android:layout_weight="1"/>


                        <TextView
                            android:layout_width="0dp"
                            android:text="개인정보 수집을 동의합니다"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:id="@+id/agree2"
                            android:layout_weight="9"/>

                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:text="회원가입"
                    android:textColor="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:onClick="insert"
                    android:id="@+id/joinbutton"
                    android:layout_weight="2"/>

            </LinearLayout>


        </ScrollView>


    </LinearLayout>


</LinearLayout>