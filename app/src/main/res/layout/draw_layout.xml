<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/linear">
            <TextView
                android:text="wait"
                android:layout_width="wrap_content"
                android:layout_weight="2"
                android:layout_height="0dp"
                android:id="@+id/timer" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:orientation="horizontal"
                android:id="@+id/FrameLayout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_gravity="right"
                    android:id="@+id/modify">

                    <TextView
                        android:text=" "
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:id="@+id/etc" />

                    <Spinner
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:entries="@array/draw_thick"
                        android:id="@+id/choice_thick" />


                    <Spinner
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:entries="@array/draw_color"
                        android:id="@+id/choice_color" />

                    <ImageButton
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/drawable_transparent_pattern"
                        android:id="@+id/draworerase" />
                    <TextView
                        android:text="answer"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent"
                        android:id="@+id/answer" />


                </LinearLayout>

                <com.agsw.FabricView.FabricView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/faricView"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true" />



                <Button
                    android:text="맞춰보세요"
                    android:textSize="40dp"
                    android:gravity="center_vertical"
                    android:background="#00000000"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/blind" />




            </FrameLayout>

        </LinearLayout>



        <ListView
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:background="#00000000"
            android:layout_gravity="bottom"
            android:id="@+id/draw_listview"

            />




    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:minHeight="50dp"

        android:orientation="horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="match_parent"
            android:id="@+id/answer_content"/>

        <Button
            android:text="전송"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:id="@+id/game_submit" />

    </LinearLayout>


</LinearLayout>