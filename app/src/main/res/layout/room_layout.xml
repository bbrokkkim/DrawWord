<?xml version="1.0" encoding="utf-8"?>
<!--<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">-->

    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/dl_activity_main_drawer"
        android:background="#ffe0c1"
        tools:context=".Activity.GameActivity" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:title="회원가입"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:contentInsetLeft="0dp"
            android:contentInsetStart="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            android:contentInsetRight="0dp"
            android:contentInsetEnd="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetEnd="0dp"
            android:background="#b4836d"
            android:weightSum="10">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:background="#754d27"
                    android:src="@drawable/ic_back_photo"
                    android:id="@+id/back_btn_game"/>

                <TextView
                    android:text="채팅"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/room_name"/>
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:background="#754d27"
                    android:id="@+id/open_navigation"/>

            </FrameLayout>
        </android.support.v7.widget.Toolbar>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:id="@+id/fl_activity_main_container">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="#ffffff"
                    android:dividerHeight="0dp"
                    android:id="@+id/ment_view"/>

            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:minHeight="50dp"
            android:orientation="horizontal">




            <EditText
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:text="name"
                android:ems="10"
                android:id="@+id/text_ment" />

            <Button
                android:text="전송"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:background="@drawable/brawn_btn"
                android:id="@+id/submit_ment" />


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:orientation="vertical"
        android:background="#fac794"
        android:id="@+id/navigation">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#fac794">
            <TextView
                android:text="방 대기 리스트"
                android:textSize="25dp"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/my_ready"
                android:layout_weight="3.5"
                android:background="#fac794"/>



            <Button
                android:text="초대"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/invate"
                android:background="@drawable/brawn_btn"
                android:layout_weight="1.5"/>

        </LinearLayout>


        <Button
            android:text="ready"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/ready_btn"
            android:background="@drawable/brawn_btn"
            android:layout_weight="1"/>


        <ListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:id="@+id/ready_list"
            android:layout_gravity="right"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            android:background="#fac794"/>


    </LinearLayout>



</android.support.v4.widget.DrawerLayout>

